{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "target": "es5",
        "declaration": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "types/index.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}